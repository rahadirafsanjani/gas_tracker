# Cross-Chain Gas Tracker Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database connection
DATABASE_URL=postgresql://gas_tracker:password@localhost:5435/gas_tracker_development

# Test database connection (for running tests)
TEST_DATABASE_URL=postgresql://gas_tracker:password@localhost:5436/gas_tracker_test

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection for caching and job queue
REDIS_URL=redis://localhost:6380/0

# Solid Queue configuration
SOLID_QUEUE_ADAPTER=redis

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Rails environment (development, test, production)
RAILS_ENV=development

# Secret key base (generate with: rails secret)
# SECRET_KEY_BASE=your_secret_key_here

# Rails server configuration
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2

# =============================================================================
# API KEYS (Optional but recommended for production)
# =============================================================================

# CoinGecko API key for USD price conversion
# Sign up at: https://www.coingecko.com/en/api
COINGECKO_API_KEY=your_coingecko_api_key_here

# LayerZero API key for bridge fee estimation
# Contact LayerZero for access
LAYERZERO_API_KEY=your_layerzero_api_key_here

# =============================================================================
# BLOCKCHAIN RPC ENDPOINTS
# =============================================================================

# Ethereum mainnet RPC endpoint
ETHEREUM_RPC=https://eth.llamarpc.com

# Polygon mainnet RPC endpoint
POLYGON_RPC=https://polygon-rpc.com

# Arbitrum One RPC endpoint
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc

# Optimism mainnet RPC endpoint
OPTIMISM_RPC=https://mainnet.optimism.io

# BNB Chain mainnet RPC endpoint
BNB_CHAIN_RPC=https://bsc-dataseed1.binance.org

# Avalanche C-Chain RPC endpoint
AVALANCHE_RPC=https://api.avax.network/ext/bc/C/rpc

# =============================================================================
# MONITORING AND LOGGING (Production)
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# New Relic license key for APM
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Log level (debug, info, warn, error)
# LOG_LEVEL=info

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Background job configuration
SOLID_QUEUE_WORKERS=2
SOLID_QUEUE_THREADS=3

# Gas price update frequency (in seconds)
GAS_PRICE_UPDATE_INTERVAL=60

# Data retention period (in days)
DATA_RETENTION_DAYS=30

# =============================================================================
# SECURITY CONFIGURATION (Production)
# =============================================================================

# Force SSL in production
# FORCE_SSL=true

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Rate limiting (requests per minute)
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=60

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Email service configuration (for alerts)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Webhook URLs for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable/disable features in development
DEBUG_MODE=true
VERBOSE_LOGGING=false

# Development server configuration
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=3000

# Auto-reload configuration
AUTO_RELOAD_ENABLED=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test environment specific settings
# TEST_PARALLELIZATION=true
# TEST_COVERAGE_ENABLED=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker service ports (if different from defaults)
POSTGRES_PORT=5435
REDIS_PORT=6380
POSTGRES_TEST_PORT=5436

# Docker service credentials
POSTGRES_USER=gas_tracker
POSTGRES_PASSWORD=password
POSTGRES_DB=gas_tracker_development
POSTGRES_TEST_DB=gas_tracker_test

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real credentials to version control
# 2. Use strong passwords and API keys in production
# 3. Regularly rotate API keys and passwords
# 4. Consider using a secrets management service in production
# 5. Some variables are only needed in specific environments (development/production)
# 6. Default values are provided for development; override as needed
# 7. For production deployment, ensure all required variables are set
